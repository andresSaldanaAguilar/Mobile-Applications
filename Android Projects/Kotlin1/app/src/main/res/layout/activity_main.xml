<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/xet1"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline6"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline7"
            app:layout_constraintVertical_bias="0.714"/>
    <EditText
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/xet2"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/guideline7" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView3"/>
    <EditText
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/xet3"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintVertical_bias="0.714" app:layout_constraintStart_toEndOf="@+id/textView4"
    />
    <TextView
            android:text="ax2 + bx + c"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/textView" android:textSize="24sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline7" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline2"/>
    <TextView
            android:text="a:"
            android:layout_width="19dp"
            android:layout_height="35dp"
            android:id="@+id/textView2" android:textSize="24sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            app:layout_constraintVertical_bias="0.538"
            app:layout_constraintEnd_toStartOf="@+id/xet1"/>
    <TextView
            android:text="b:"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/textView3" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline6"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.512"/>
    <TextView
            android:text="c:"
            android:layout_width="19dp"
            android:layout_height="35dp"
            android:id="@+id/textView4" android:textSize="24sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline6"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline7"
            app:layout_constraintStart_toStartOf="@+id/guideline5" app:layout_constraintVertical_bias="0.538"/>
    <Button
            android:text="Confirmar"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline3" app:layout_constraintHorizontal_bias="0.428"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline6"
            android:background="@color/colorPrimary" android:textColor="@android:color/white"
            app:layout_constraintVertical_bias="0.352"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal" app:layout_constraintGuide_end="191dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6"
                                          android:orientation="horizontal" app:layout_constraintGuide_end="306dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline7"
                                          android:orientation="horizontal" app:layout_constraintGuide_end="396dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_begin="30dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="vertical" app:layout_constraintGuide_end="30dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.35"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5" app:layout_constraintGuide_begin="245dp"
                                          android:orientation="vertical"/>

</android.support.constraint.ConstraintLayout>